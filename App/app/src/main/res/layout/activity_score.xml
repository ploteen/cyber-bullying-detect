<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/score_image"
        android:layout_width="wrap_content"
        android:layout_height="271dp"
        android:src="@drawable/low" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/score_call" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/helper_name"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="임시"
            android:gravity="center"
            android:textSize="40dp">
        </TextView>

        <ImageButton
            android:id="@+id/helper_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/call"
            android:background="@color/white"></ImageButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="1388 청소년 사이버상담센터"
            android:gravity="center"
            android:textSize="60dp"
            android:src="@drawable/cyber">
        </ImageView>

        <ImageButton
            android:id="@+id/police_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:src="@drawable/call"></ImageButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="1388 청소년 사이버상담센터"
            android:gravity="center"
            android:textSize="60dp"
            android:src="@drawable/police">
        </ImageView>

        <ImageButton
            android:id="@+id/cyber_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/call"
            android:background="@color/white"></ImageButton>
    </LinearLayout>

</LinearLayout>